#include <stdio.h>
#include <stdlib.h>
void towerofhanoi(int n, char s,char d,char aux)
{
    int i=0;
    i++;
    if(n==1)
    {
    printf("move disk 1 from %c to %c\n",s,d);
    return;
    }
    towerofhanoi(n-1,s,aux,d);
    printf("move disk %d from  %c to  %c\n", n,s,d);
    towerofhanoi(n-1,aux,d,s);
}
int gcd(int x, int y)
{
    if(x > y)
        gcd(x-y, y);
    else if(y > x)
        gcd(x, y-x);
    else
    return x;
}
void main()
{
    int ch,x,y,n,r=0;
    do
    {
        printf("enter choice 1.tower of hanoi ,2.gcd, 3.exit\n");
        scanf("%d",&ch);
    switch(ch)
    {
        case 1: printf("enter no. of disks\n");
                scanf("%d",&n);
                towerofhanoi(n,'a','c','b');
                break;
        case 2:printf("enter 2 numbers to find gcd\n");
                scanf("%d%d",&x,&y);
                r=gcd(x,y);
                printf("gcd=%d\n",r);
                break;
         case 3:exit(0);        
    }
    
    }while(1);
}
